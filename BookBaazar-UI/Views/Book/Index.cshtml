@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="row justify-content-center mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="position-relative">
                <img src="~/images/special99box.png" class="card-img-top" alt="Special 99 Box">
                <span class="badge bg-success position-absolute top-0 start-0 m-2">Sale</span>
            </div>

            <div class="card-body text-center">
                <h5 class="card-title">Special 99 Box (16 Books Combo)</h5>

                <p class="card-text">
                    <del>Rs. 7,999.00</del><br />
                    <span class="fw-bold text-danger">Rs. 1,599.00</span>
                </p>

                <button class="btn btn-outline-danger w-100">Add to cart</button>
            </div>
        </div>
    </div>
</div>
